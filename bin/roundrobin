#!/usr/bin/env node
var Table = require('cli-table');
var lib = require('../lib');
var tournament = lib.runners.roundrobin(lib.strategies);

var table = new Table({
  head: ['#', 'wins', 'points', 'name']
});

tournament.results
// sort by fewest years in prison
.sort(function (a, b) {
  return b.for - a.for;
})
// add each result to the table
.forEach(function (result, i) {
  var player = tournament.players[result.seed-1];
  table.push([i+1, result.wins, -result.for, player.name]);
});

console.log(table.toString());
